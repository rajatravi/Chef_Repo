---

filebeat:
  prospectors:
    -
      paths:
        - /var/log/auth.log
      #  - /var/log/syslog
      #  - /var/log/*.log
      #  - /var/log/yum.log             

      input_type: log
      
      document_type: syslog

   include_lines: [".*Failed.*", ".*Accepted.*", ".*Successful.*", ".*FAILED.*"]

   registry_file: /var/lib/filebeat/registry

output:
  logstash:
    hosts: ["<%= @logstash_ip %>:5044"]
    bulk_max_size: 1024

shipper:

logging:
  files:
    rotateeverybytes: 10485760 # = 10MB
